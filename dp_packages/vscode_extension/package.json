{
  "name": "dpug",
  "displayName": "DPug Language Support",
  "description": "Language support for DPug - A concise syntax for Flutter widgets",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:dpug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dpug",
        "aliases": [
          "DPug",
          "dpug"
        ],
        "extensions": [
          ".dpug"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dpug",
        "scopeName": "source.dpug",
        "path": "./syntaxes/dpug.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "dpug.formatDocument",
        "title": "Format Document",
        "category": "DPug"
      },
      {
        "command": "dpug.toDart",
        "title": "Convert to Dart",
        "category": "DPug"
      },
      {
        "command": "dpug.fromDart",
        "title": "Convert from Dart",
        "category": "DPug"
      },
      {
        "command": "dpug.server.start",
        "title": "Start Server",
        "category": "DPug"
      },
      {
        "command": "dpug.server.stop",
        "title": "Stop Server",
        "category": "DPug"
      },
      {
        "command": "dpug.server.status",
        "title": "Server Status",
        "category": "DPug"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "dpug.formatDocument",
          "when": "resourceExtname == .dpug"
        },
        {
          "command": "dpug.toDart",
          "when": "resourceExtname == .dpug"
        }
      ],
      "commandPalette": [
        {
          "command": "dpug.formatDocument",
          "when": "resourceExtname == .dpug"
        },
        {
          "command": "dpug.toDart",
          "when": "resourceExtname == .dpug"
        },
        {
          "command": "dpug.fromDart",
          "when": "resourceExtname == .dart"
        },
        {
          "command": "dpug.server.start"
        },
        {
          "command": "dpug.server.stop"
        },
        {
          "command": "dpug.server.status"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "DPug",
      "properties": {
        "dpug.server.host": {
          "type": "string",
          "default": "localhost",
          "description": "DPug server host"
        },
        "dpug.server.port": {
          "type": "number",
          "default": 8080,
          "description": "DPug server port"
        },
        "dpug.formatting.compact": {
          "type": "boolean",
          "default": false,
          "description": "Use compact formatting"
        },
        "dpug.formatting.indent": {
          "type": "string",
          "default": "  ",
          "description": "Indentation string"
        },
        "dpug.server.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start DPug server when extension activates"
        },
        "dpug.server.autoStop": {
          "type": "boolean",
          "default": true,
          "description": "Automatically stop DPug server when extension deactivates"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run compile-server",
    "compile-server": "tsc -p ./ --outDir out/server",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}
